rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      // Allow read by anyone authenticated
      allow read: if request.auth != null;
      
      // Only owner can write/delete
      allow write, delete: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Post images
    match /posts/{postId}/{fileName} {
      // Allow read by anyone authenticated
      allow read: if request.auth != null;
      
      // Allow write if authenticated and valid image
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024  // 10MB max
        && request.resource.contentType.matches('image/.*');
      
      // Only uploader can delete (check metadata)
      allow delete: if request.auth != null 
        && resource.metadata.uploadedBy == request.auth.uid;
    }
    
    // Chat images
    match /chats/{chatId}/{fileName} {
      // Read if user is participant in chat
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/chats/$(chatId)/participants/$(request.auth.uid));
      
      // Write if user is participant and valid image
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/chats/$(chatId)/participants/$(request.auth.uid))
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      
      // Delete if user uploaded it
      allow delete: if request.auth != null
        && resource.metadata.uploadedBy == request.auth.uid;
    }
    
    // Story images
    match /stories/{userId}/{fileName} {
      // Anyone can read authenticated users' stories
      allow read: if request.auth != null;
      
      // Only owner can upload stories
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024
        && (request.resource.contentType.matches('image/.*') 
           || request.resource.contentType.matches('video/.*'));
      
      // Only owner can delete
      allow delete: if request.auth != null
        && request.auth.uid == userId;
    }
  }
}
