# Staging Environment Variables
# WARNING: Do not commit sensitive values!

# Environment
VITE_APP_ENV=staging

# Firebase Configuration (Staging)
VITE_FIREBASE_API_KEY=staging-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=snuggle-staging.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=snuggle-staging
VITE_FIREBASE_STORAGE_BUCKET=snuggle-staging.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=staging-sender-id
VITE_FIREBASE_APP_ID=staging-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-STAGING-ID

# No emulators in staging
VITE_USE_EMULATORS=false

# Feature Flags (Staging - selective)
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_VIDEO_CALLS=true
VITE_FEATURE_STORIES=true
VITE_FEATURE_CIRCLES=false

# Analytics
VITE_ANALYTICS_ENABLED=true

# API Configuration
VITE_API_BASE_URL=https://snuggle-staging.web.app

# Logging
VITE_LOG_LEVEL=info
