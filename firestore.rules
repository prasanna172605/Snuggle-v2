rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- App Update & Config (Publicly Readable) ---
    match /app_updates/{docId} {
      allow read: if true;
      allow write: if false;
    }
    match /app_config/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // --- Existing Rules ---
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isValidUser(user) {
      return user.keys().hasAll(['username', 'email', 'displayName']) &&
             user.username is string && user.username.size() > 0 &&
             user.email is string && user.email.size() > 0;
    }
    
    // Users collection
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isSignedIn();
      allow delete: if isOwner(userId);

      // User's private subcollections
      match /savedMemories/{memoryId} {
        allow read, write: if isOwner(userId);
      }
      match /likedPosts/{postId} {
        allow read, write: if isOwner(userId);
      }
      match /chatSettings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Posts collection
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isOwner(resource.data.userId);
      
      // Likes subcollection - users can only manage their own likes
      match /likes/{likeUserId} {
        allow read: if isSignedIn();
        allow create, delete: if isSignedIn() && request.auth.uid == likeUserId;
      }
      
      // Saves subcollection - users can only manage their own saves
      match /saves/{saveUserId} {
        allow read: if isSignedIn();
        allow create, delete: if isSignedIn() && request.auth.uid == saveUserId;
      }
    }
    
    // Comments collection
    match /comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Chats & Messages
    // Chats & Messages
    match /chats/{chatId} {
      // Allow read if user is a participant OR if checking for existence (resource == null)
      allow read: if isSignedIn() && (resource == null || request.auth.uid in resource.data.participants);
      
      // Allow create if user is in the participants array
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      // Allow update if user is a participant (e.g., updating lastMessage, typing indicators)
      allow update: if isSignedIn() && (
        (resource.data != null && request.auth.uid in resource.data.participants) ||
        (request.resource.data != null && request.auth.uid in request.resource.data.participants)
      );
      
      // Allow delete if user is a participant
      allow delete: if isSignedIn() && request.auth.uid in resource.data.participants;

      // Chat Settings (e.g., mute, background)
      match /chat_settings/{settingId} {
         allow read, write: if isSignedIn();
      }

      match /messages/{messageId} {
         allow read: if isSignedIn();
         allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
         allow update: if isSignedIn();
         allow delete: if isSignedIn(); 
      }
    }
    
    // Stories collection
    match /stories/{storyId} {
      allow read: if isSignedIn() && 
                    request.time < resource.data.expiresAt;
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Allow collectionGroup queries on messages (for pending message updates)
    match /{path=**}/messages/{messageId} {
      allow read, write: if isSignedIn();
    }

    // WebRTC signaling - allow users to send/receive call signals
    match /webrtc_signals/{signalId} {
      allow read, write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Memories collection
    match /memories/{memoryId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn(); 
      allow delete: if isOwner(resource.data.userId);
      
      match /likes/{userId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == userId;
      }
      
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow delete: if isOwner(resource.data.userId);
      }
    }

  }
}
